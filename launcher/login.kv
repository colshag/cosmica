ScreenManagement:
    LoginPage:
    UserPage:

<LoginPage>:
    name: "login_page"
    BoxLayout:
        TextInput:
            id: login
        TextInput:
            id: passw
            password: True # hide password
        Button:
            text: "Login"
            on_release: root.login_user()

<UserPage>:
    name: "user_page"
    Button:
        text: "back"
        on_release: app.root.current = "login_page"